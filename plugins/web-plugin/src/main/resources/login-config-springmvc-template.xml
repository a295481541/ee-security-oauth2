<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<value>
				/login.html=UserLoginController
			</value>
		</property>
	</bean>
	
	<bean id="UserLoginController" class="com.eenet.authen.extension.web.UserLoginController">
		<property name="endUserSignOnService" ref="EndUserSignOnBizService"/>
		<property name="adminUserSignOnService" ref="AdminUserSignOnBizService"/>
		<property name="transferEncrypt" ref=""/>
		<property name="defaultPageLocation" value=""/>
	</bean>
</beans>